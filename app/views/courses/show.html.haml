%p#notice= notice

.row
  .header-panel.margin-bottom.large-11.large-centered.columns
    %h1= @course.name
    %p= @course.description
= render "courses/sections"

.row
  .large-11.large-centered.columns
    - if current_user && current_user.admin?
      = link_to 'New Section', new_course_section_path(@course), class: "button small radius"
      = link_to 'Edit', edit_course_path(@course)
      |
    = link_to 'Back', courses_path